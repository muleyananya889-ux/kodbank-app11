generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  balance   Float    @default(10000)
  createdAt DateTime @default(now())
}
